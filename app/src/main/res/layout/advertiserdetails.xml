<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/maingradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_below="@id/ivBanner"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvName"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"/>

    <RelativeLayout
        android:layout_below="@+id/tvName"
        android:id="@+id/shopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/tvProduct"
            android:textSize="15sp"
            android:textColor="#404040"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product" />

        <TextView
            android:id="@+id/tvLocation"
            android:textSize="15sp"
            android:textColor="#404040"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <View
        android:id="@+id/viewLayout"
        android:layout_below="@+id/shopLayout"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="2dp"
        android:background="#80FE3562"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cvDescription"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_below="@+id/viewLayout"
        android:layout_above="@+id/cvFloorPLan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/tvDescription"
            android:gravity="fill_horizontal"
            android:textSize="15sp"
            android:textColor="#404040"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Description" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_above="@+id/btnDirection"
        android:id="@+id/cvFloorPLan">

        <ImageView
            android:id="@+id/ivFloorPlan"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />

    </android.support.v7.widget.CardView>

    <Button
        android:layout_margin="10dp"
        android:background="@drawable/roundbutton"
        android:id="@+id/btnDirection"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Show Direction" />

</RelativeLayout>